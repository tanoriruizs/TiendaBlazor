@inherits LayoutComponentBase

@inject NavigationManager Navigation

<PageTitle>TiendaBlazor</PageTitle>

<div class="page">
    @if (!IsSpecialPage)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
    }

    <main>
        @if (!IsSpecialPage)
        {
            <div class="top-row px-4">
                <a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
            </div>
        }

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

@code {
    private bool IsSpecialPage => Navigation.Uri.EndsWith("/") || Navigation.Uri.Contains("/login");
}
