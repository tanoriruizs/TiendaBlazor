@page "/login"

<div class="row justify-content-center">
    <div class="col-md-6">
        <h3 class="text-center">Login</h3>

        <div class="mb-3">
            <label for="correo" class="form-label">Correo electrónico</label>
            <input @bind="correo" id="correo" class="form-control" />
        </div>
        <div class="mb3">
            <label for="contraseña" class="form-label">Contraseña</label>
            <input @bind="contraseña" id="contraseña" type="password" class="form-control" />
        </div>
        <button @onclick="HandleLogin" class="btn btn-primary btn-block">Iniciar Sesión</button>

        @if (loginFailed)
        {
            <div class="alert alert-danger mt-3 text-center">Usuario o contraseña incorrectos</div>
        }
    </div>
</div>
